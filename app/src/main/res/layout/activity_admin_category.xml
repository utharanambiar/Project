<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"

    tools:context=".AdminCategoryActivity">

    <ImageView
        android:id="@+id/a1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"

        android:layout_marginEnd="57dp"
        android:src="@drawable/logo_woody" />

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"

        android:textSize="32sp"

        />

    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/bed"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:focusable="true"
            android:src="@drawable/iconbed"

            android:text="bed"
            android:textAlignment="center" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>


        <ImageView
            android:id="@+id/dining"
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:focusable="true"
            android:src="@drawable/icontable" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/cupboard"
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="150dp"

            android:focusable="true"

            android:src="@drawable/iconwardrobe" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="340dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/linear_category_layout2"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear_category_layout1"

        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/sofa"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:focusable="true"
            android:src="@drawable/iconsofa" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/door"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:focusable="true"
            android:src="@drawable/icondoor" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:id="@+id/lamp"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:focusable="true"
            android:src="@drawable/iconlamp" />
    </LinearLayout>
    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="23dp"
        android:textColor="@android:color/black"
        android:text="Edit product details"
        android:textAllCaps="false"
        android:layout_above="@+id/check_orders_btn"
        android:background="@drawable/buttons2">
    </Button>
    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="23dp"
        android:textColor="@android:color/black"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:layout_above="@+id/admin_logout_btn"
        android:background="@drawable/buttons2">
    </Button>
<Button
    android:id="@+id/admin_logout_btn"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:textSize="23dp"
    android:textColor="@android:color/black"
    android:text="Logout"
    android:layout_marginBottom="12dp"
    android:textAllCaps="false"
    android:background="@drawable/buttons2">
</Button>




</RelativeLayout>